<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/12.0/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache"
         failOnEmptyTestSuite="true"
         
         displayDetailsOnIncompleteTests="false"
         displayDetailsOnSkippedTests="false"
         displayDetailsOnTestsThatTriggerNotices="false"
         displayDetailsOnTestsThatTriggerWarnings="false"
         displayDetailsOnTestsThatTriggerDeprecations="false"
         
         failOnIncomplete="false" 
         failOnRisky="true"
         failOnSkipped="false"
         failOnWarning="false"> <testsuites>
        <testsuite name="Application">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
    </source>
</phpunit>